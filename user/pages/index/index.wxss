/**index.wxss**/

.userinfo {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 375rpx;
  position: relative;
}

.userinfo-bg {
  width: 100%;
  height: 100%;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 70rpx;
  position: absolute;
  border: 4rpx solid white;
}

.userinfo-nickname {
  color: #fff;
  font-size: 5vw;
  margin-left: 250rpx;
  margin-top: -20rpx;
  position: absolute;
}

.userinfo-rank {
  color:gray;
  font-size: 3vw;
  margin-left: 250rpx;
  margin-top: 20rpx;
  position: absolute;
}

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}

.swiper-tab-item {
  display: inline-block;
  font-size: 5vw;
  width: 40%;
  color: #1f1f27;
}

.active {
  color: green;
  border-bottom: 4rpx solid green;
}

.swiper {
  width: 100%;
  height: 1000rpx;
  border-bottom: 2rpx solid #ccc;
  line-height: 88rpx;
}

.scrollview {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
}

.card {
  margin: 16rpx;
  position: relative;
}

.photo {
  width: 720rpx;
  height: 294rpx;
  border-radius: 1em;
  box-shadow: 2rpx 6rpx 8rpx #999;
}

.detail {
  position: absolute;
  color: #fff;
}

.detail-type {
  top: 24rpx;
  left: 44rpx;
  font-size: 48rpx;
}

.detail-time {
  bottom: 24rpx;
  right: 44rpx;
  font-size: 28rpx;
}

.detail-old {
  float: right;
  color: orange;
  position: absolute;
  right: 60rpx;
  bottom: 30rpx;
  z-index: 1;
  font-size: 28rpx;
}
